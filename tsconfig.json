{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es2019", // AWS Lambda Node v12.x
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "typedocOptions": {
    "exclude": [
      "**/*.test.ts",
      "**/__mocks__/*.ts"
    ],
    "mode": "modules",
    "out": "docs"
  }
}
